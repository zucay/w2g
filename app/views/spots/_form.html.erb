<%= semantic_form_for @spot, :html=>{:multipart => true} do |f| %>
  <%= f.inputs do %>
    <% # アクティブカラムに応じたフォームの自動生成  %>
	  <% @spot.active_column_names.each do |col_name| %>
		  <% opts = {}  %>
      <% if(col_name =~ /pic\d/)  %>
  			<% opts[:as] = :file %>
			<% end  %>
			<% opts[:label] = @spot.header[col_name + '_label'] %>
			<% opts[:hint] = @spot.header.hint(col_name) %>

			<% if(@spot.header.not_null?(col_name)) %>
			  <% opts[:required] = true  %>
			<% end  %>
			
			<%= f.input col_name.to_sym, opts %>			
		<% end  %>

    <% # 記入者情報  %>
		ご回答いただいた方のお名前をご記入くださいませ。
		<%= f.semantic_fields_for :caretaker do |cf| %>
			<%= cf.input :name, :label => '組織名', :hint => '四谷観光協会' %>
			<%= cf.input :div_name, :label => '部署名', :hint => '施設管理課' %>
			<%= cf.input :person, :label => 'ご担当者様名', :hint => '四谷太郎' %>
			<%= cf.input :tel, :label => '電話番号', :hint => '03-3352-7334' %>
		<% end %>

	<% end  %>

	<%= f.buttons %>
<% end  %>



