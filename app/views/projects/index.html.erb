<d>
<div class="hero-unit" style="background-image: url(img/hero_img.jpg);height: 66px">
 
</div>

<% Project.public.each do |pj|  %>
	<div class="well">
		<h3><%= link_to pj.name, pj %></h3>
		<% pic_num = 6  %>
		<table class="table table-sstriped"><tbody><tr>
		<% pj.spots.first(pic_num).each do |sp|  %>
			<td width="#{(100/pic_num).to_i}%">
			<%= link_to(sp.project) do %>
  			<%= image_tag sp.pic0.url(:small), :alt => sp.name_with_pref %>
				<h5><%= sp.name_with_pref %></h5>
			<% end %>
			</td>
		<% end  %>
		</tr></tbody></table>
	</div>
<% end  %>

