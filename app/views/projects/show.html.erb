<% title = "#{resource.genre.name} 「#{resource.name}」" %>
<% content_for :title, title %>

<ul class="breadcrumb">
	<li><a href="/">HOME</a> <span class="divider">/</span> </li>
	<li><%= link_to resource.genre.name, Project %><span class="divider">/</span></li>
	<li class="active"><%= resource.name %></li>
</ul>

<h2><%= title %></h2>
<% spots = resource.spots.active %>
<div id='content' style="width:690px">
<%= resource.description %>
<%= resource.created_at.strftime("(%Y/%m)") %>
